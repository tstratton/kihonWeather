<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/current_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/status_icon"
            android:layout_width="@dimen/forecast_icon_size"
            android:layout_height="@dimen/forecast_icon_size"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/location_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            tools:text="New York, NY" />

        <TextView
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/location_text"
            android:layout_margin="@dimen/margin_medium"
            android:layout_gravity="left"
            android:layout_toLeftOf="@+id/status_icon"
            android:textSize="24sp"
            tools:text="Overcast" />

        <TextView
            android:id="@+id/temperature_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/location_text"
            android:layout_margin="@dimen/margin_medium"
            android:layout_toRightOf="@+id/status_icon"
            android:textSize="20sp"
            tools:text="44.1 F (6.7 C)" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/status_text"
            android:layout_margin="@dimen/margin_small"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sunrise_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_medium"
                tools:text="Sunrise: 7:52" />

            <TextView
                android:id="@+id/sunset_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium"
                tools:text="Sunset: 16:18" />

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>